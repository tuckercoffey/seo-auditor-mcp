# SEO Auditor MCP Server Environment Variables

# Database Configuration
DATABASE_URL=sqlite:///seo_auditor.db

# API Keys (Optional - enables advanced features)
GOOGLE_API_KEY=your_google_api_key_here
GSC_CREDENTIALS=path_to_google_search_console_credentials.json
AHREFS_API_KEY=your_ahrefs_api_key_here
SEMRUSH_API_KEY=your_semrush_api_key_here

# Rate Limiting
REQUESTS_PER_SECOND=2
MAX_CONCURRENT_REQUESTS=5

# Crawling Settings
USER_AGENT=SEO-Auditor-Bot/1.0 (+https://github.com/your-org/seo-auditor)
REQUEST_TIMEOUT=30
MAX_REDIRECTS=5

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO